    "basePath": "/v1",
    "paths": {
        "/driver_survey/": {
            "post": {
                "tags": [
                    "driver_survey"
                ],
                "description": "提交用户填写的调查数据",
                "operationId": "DriverSurveyController.Post提交数据",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "json格式，包含项年龄:Age,邮箱:Email,游戏:Game,名称:Name,地区/国家:Region,性别:Sexuality,签名:Sign,建议:Suggest",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.SurveyForm"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "{int} models.DriverSurvey"
                    },
                    "400": {
                        "description": "body is empty"
                    }
                }
            }
        }
    },
    "definitions": {
        "models.SurveyForm": {
            "title": "SurveyForm",
            "type": "object",
            "properties": {
                "Age": {
                    "description": "年龄",
                    "type": "string"
                },
                "Email": {
                    "description": "邮箱",
                    "type": "string"
                },
                "Game": {
                    "description": "游戏",
                    "type": "string"
                },
                "Name": {
                    "description": "年龄",
                    "type": "string"
                },
                "Region": {
                    "description": "地区/国家",
                    "type": "string"
                },
                "Sexuality": {
                    "description": "性别(female|male)",
                    "type": "string"
                },
                "Sign": {
                    "description": "签名",
                    "type": "string"
                },
                "Suggest": {
                    "description": "建议",
                    "type": "string"
                }
            }
        }
    },
